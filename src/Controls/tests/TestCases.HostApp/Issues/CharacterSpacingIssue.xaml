<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Maui.Controls.Sample.Issues.CharacterSpacingIssue">
    <ShellContent
        Title="Home"
        Route="MainPage">
        <ContentPage>
            <Shell.SearchHandler>
                <SearchHandler x:Name="searchHandler"
                               CharacterSpacing="10"/>
            </Shell.SearchHandler>
            <StackLayout>
                <Button
                    AutomationId="Entertext"
                    Text="Enter Text"
                    Clicked="BtnClicked"/>
            </StackLayout>
        </ContentPage>
    </ShellContent>
</Shell>